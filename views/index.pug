extends layout

block content
  h1= title
  p Hello, this is an updated paragraph text in the index page, Thank you. 
  p Welcome to northwest missouri state university. My name is #{title}.
  button(type="button" class="btn btn-secondary" onclick="doReduce()") Press Me
  div#reduce Reduce the value
  script.
    let count = 20;
    let change = -1;
    function doReduce() {
      count += change;
      change -= 1;
      document.getElementById('reduce').textContent = `Count ${count} with change ${change}`;
    }
